<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/news_item_padding">

    <TextView
        android:id="@+id/tv_topic"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        tools:text="@string/economy" />

    <TextView
        android:id="@+id/tv_title"
        android:textColor="@android:color/black"
        android:paddingTop="@dimen/title_padding_top"
        android:paddingBottom="@dimen/title_padding_bottom"
        android:textSize="@dimen/title_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/russia_strikes_back" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/date_text_size"
            tools:text="@string/mark_twain" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/date_text_size"
            android:layout_toLeftOf="@+id/tv_time"
            tools:text="28 Mar 2018" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/time_text_size"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/time_padding_left"
            tools:text="16:46" />

    </RelativeLayout>


</LinearLayout>